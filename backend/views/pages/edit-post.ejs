<a href="/">&larr; Back</a>

<div class="admin-title">
  <h2>View / Edit Post</h2>

  <form action="/delete-post/<%= data._id %>?_method=DELETE" method="POST">
    <input type="submit" value="Delete" class="btn-delete btn">
  </form>
</div>

<form action="/edit-post/<%= data._id %>?_method=PUT" method="POST" class="admin-post-form">
  <label for="title"><b>Title</b></label>
  <input type="text" placeholder="Post Title" name="title" id="title" value="<%= data.title %>" required>

  <label for="body"><b>Content</b></label>
  <textarea name="body" id="body" cols="50" rows="10" placeholder="Enter post content" required><%= data.body %></textarea>

  <input type="submit" value="Update Post" class="btn-submit">
</form>

